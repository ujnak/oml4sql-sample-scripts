  2         as select time_id, amount_sold
  3         from sh.sales;

View ESM_SH_DATAは作成されました。

SQL>
SQL> -- Build the ESM model
SQL> DECLARE
  2    v_setlst DBMS_DATA_MINING.SETTING_LIST;
  3  BEGIN
  4    -- Select ESM as the algorithm
  5    v_setlst('ALGO_NAME') := 'ALGO_EXPONENTIAL_SMOOTHING';
  6    -- Set accumulation interval to be quarter
  7    v_setlst('EXSM_INTERVAL') := 'EXSM_INTERVAL_QTR';
  8    -- Set prediction step to be 4 quarters (one year)
  9    v_setlst('EXSM_PREDICTION_STEP') := '4';
 10    -- Set ESM model to be Holt-Winters
 11    v_setlst('EXSM_MODEL') := 'EXSM_WINTERS';
 12    -- Set seasonal cycle to be 4 quarters
 13    v_setlst('EXSM_SEASONALITY') := '4';
 14
 15    dbms_data_mining.create_model2(
 16      model_name          => 'ESM_SH_SAMPLE',
 17      mining_function     => 'TIME_SERIES',
 18      data_query          => 'select * from esm_sh_data',
 19      case_id_column_name => 'time_id',
 20      target_column_name  => 'amount_sold',
 21      set_list            => v_setlst);
 22  END;
 23  /

